<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/widget_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/widget_content_description"
        app:srcCompat="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/widget_text"
        style="@style/textView.item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/widget_icon"
        android:layout_alignTop="@+id/widget_icon"
        android:layout_toEndOf="@+id/widget_icon"
        android:layout_toRightOf="@+id/widget_icon"
        android:contentDescription="@string/widget_icon_description"
        android:gravity="center"
        android:text="@string/widget_empty_content" />
</RelativeLayout>
