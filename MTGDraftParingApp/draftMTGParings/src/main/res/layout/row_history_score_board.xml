<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/history_score_board_titleTextView"
        style="@style/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/text_view_padding"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/history_score_board_playerWonTextView"
        style="@style/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/history_score_board_titleTextView"
        android:drawableLeft="@drawable/ic_cup"
        android:drawableStart="@drawable/ic_cup"
        android:padding="@dimen/text_view_padding" />

    <TextView
        android:id="@+id/history_score_board_dateTextView"
        style="@style/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/history_score_board_playerWonTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/history_score_board_playerWonTextView"
        android:layout_below="@+id/history_score_board_titleTextView"
        android:padding="@dimen/text_view_padding" />
</RelativeLayout>