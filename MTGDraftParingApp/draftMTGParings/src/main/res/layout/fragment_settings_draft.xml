<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/settings_optionImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_draft"
        android:transitionName="settingsImage" />

    <TextView
        android:id="@+id/settings_optionText"
        style="@style/textView.settings.bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/settings_menu_item_draft" />

    <Button
        android:id="@+id/settings_sittingsButton"
        style="@style/buttonBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/settings_createPairingsChooserButton"
        style="@style/buttonBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_personal_parings" />


    <Button
        android:id="@+id/settings_saveResultsAfterDraftButton"
        style="@style/buttonBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_personal_parings" />
</LinearLayout>