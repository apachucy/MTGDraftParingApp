<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/history_score_board_playerTextView"
        style="@style/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/settings_padding"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Player" />

    <TextView
        android:id="@+id/history_score_board_playerInfoTextView"
        style="@style/textView.item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/history_score_board_playerTextView"
        android:drawablePadding="@dimen/text_view_padding"
        android:drawableStart="@drawable/ic_tournament"
        android:gravity="center"
        tools:text="7" />

    <TextView
        android:id="@+id/history_score_board_playerDraftWinTextView"
        style="@style/textView.item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/history_score_board_playerInfoTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/history_score_board_playerInfoTextView"
        android:layout_below="@+id/history_score_board_playerTextView"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/history_score_board_playerInfoTextView"
        android:layout_toStartOf="@id/history_score_board_playerInfoTextView"
        android:drawableEnd="@drawable/ic_cup"
        android:drawablePadding="@dimen/text_view_padding"
        android:gravity="center"

        tools:text="5" />
</RelativeLayout>