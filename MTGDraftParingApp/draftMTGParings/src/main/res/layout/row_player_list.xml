<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/row_playerNameTextView"
        style="@style/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/row_playerPointTextView"
        android:ellipsize="end"
        android:padding="@dimen/text_view_player_list" />

    <TextView
        android:id="@+id/row_playerOGWTextView"
        style="@style/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/text_view_player_list" />

    <TextView
        android:id="@+id/row_playerPGWTextView"
        style="@style/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/row_playerOGWTextView"
        android:padding="@dimen/text_view_player_list" />

    <TextView
        android:id="@+id/row_playerOMWTextView"
        style="@style/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/row_playerPGWTextView"
        android:padding="@dimen/text_view_player_list" />

    <TextView
        android:id="@+id/row_playerPMWTextView"
        style="@style/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/row_playerOMWTextView"
        android:padding="@dimen/text_view_player_list" />

    <TextView
        android:id="@+id/row_playerPointTextView"
        style="@style/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/row_playerPMWTextView"
        android:paddingBottom="@dimen/text_view_player_list"
        android:paddingLeft="@dimen/text_view_player_list"
        android:paddingRight="@dimen/text_view_point_padding"
        android:paddingTop="@dimen/text_view_player_list" />

</RelativeLayout>