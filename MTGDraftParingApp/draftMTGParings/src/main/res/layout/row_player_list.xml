<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/row_playerNameTextView"
        style="@style/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@dimen/weight_name"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="1.Adrian" />

    <TextView
        android:id="@+id/row_playerPointTextView"
        style="@style/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@dimen/weight_statistic"
        android:gravity="center"
        tools:text="5" />


    <TextView
        android:id="@+id/row_playerPMWTextView"
        style="@style/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@dimen/weight_statistic"
        android:gravity="center"
        tools:text="0.33" />

    <TextView
        android:id="@+id/row_playerOMWTextView"
        style="@style/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@dimen/weight_statistic"
        android:gravity="center"
        tools:text="0.33" />

    <TextView
        android:id="@+id/row_playerPGWTextView"
        style="@style/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@dimen/weight_statistic"
        android:gravity="center"
        tools:text="0.33" />

    <TextView
        android:id="@+id/row_playerOGWTextView"
        style="@style/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@dimen/weight_statistic"
        android:gravity="center"
        tools:text="0.33" />
</LinearLayout>