<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/settings_displayScoreBoardsButton"
        style="@style/buttonBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_display_scoreboards" />

    <Button
        android:id="@+id/settings_displayPlayerHistoryButton"
        style="@style/buttonBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_display_players_list" />

    <Button
        android:id="@+id/settings_removeScoreBoardsButton"
        style="@style/buttonBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_clean_history" />

</LinearLayout>