<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/history_player_detail_playerNameTextView"
        style="@style/textView.settings.bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/history_player_detail_playerNameTextView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_player_detailplayerOverallPositionsTextView"
            style="@style/textView.item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/history_player_overall_places" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/history_player_detail_playerOverallPositionsList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_view_padding"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/history_player_playerAchievementsTextView"
            style="@style/textView.item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/history_player_overall_played" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/history_player_detail_playerAchievementsList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_view_padding"
            android:scrollbars="vertical" />
    </LinearLayout>
</RelativeLayout>