<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/navy_blue_dark" />

            <stroke android:width="@dimen/stroke_width_small" android:color="@color/black" />

            <corners android:radius="@dimen/radius_small" />
        </shape></item>
    <item android:state_enabled="true"><shape>
            <gradient android:endColor="@color/orange_light_dark" android:startColor="@color/orange_dark" />

            <stroke android:width="@dimen/stroke_width_small" android:color="@color/black" />

            <corners android:radius="@dimen/radius_small" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <solid android:color="@color/grey_light" />

            <stroke android:width="@dimen/stroke_width_small" android:color="@color/grey_dark" />

            <corners android:radius="@dimen/radius_small" />
        </shape></item>

</selector>