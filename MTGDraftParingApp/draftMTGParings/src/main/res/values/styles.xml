<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.



        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->



    </style>


    <!-- Background for all views -->
    <style name="background" parent="AppTheme">
        <item name="android:background">@drawable/layout_background</item>
    </style>

    <style name="background.dialog">
        <item name="android:background">@drawable/dialog_background</item>
    </style>
    <!-- Small Button -->
    <style name="buttonSmall" parent="@android:style/Widget.Button.Small">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <!-- Small Button for settings -->
    <style name="buttonSmall.settings">
        <item name="android:padding">0dp</item>
    </style>
    <!-- Text View -->
    <style name="textView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textView.dialog">
        <item name="android:padding">@dimen/text_view_padding</item>
        <item name="android:textColor">@color/blue_dark</item>
    </style>
    <!-- Edit Text -->
    <style name="editText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Edit Text for settings -->
    <style name="editText.settings">
        <item name="android:layout_width">@dimen/settings_edit_text_width</item>
    </style>

    <style name="toggleButton" parent="@android:style/Widget.Button.Toggle">
        <item name="android:background">@drawable/toggle_button_background</item>
        <item name="android:textColor">@drawable/toggle_button_text_color</item>
    </style>

    <style name="showcaseThem" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#A533B5E5</item>
    </style>


</resources>